%section.reviews
  .page-head
    %h3
      %i.icon-comment
      User Reviews

  - 10.times.each do
    .row
      .span7
        .well
          %h5
            = lorem.sentence
            %br/
            %small
              Posted by #{link_to lorem.name, '#'} around 15 days ago
          %hr/
          %blockquote= lorem.paragraph
          %p.muted
            %i.icon-ok
            10 People liked this review
          .btn-group
            %a.btn{href: '#'}
              %i.icon-chevron-right
              Read More
            %a.btn{href: '#'}
              %i.icon-ok
              Like it!

  .pagination
    %ul
      %li
        %a{href: "#"} Prev
      %li.active
        %a{href: "#"} 1

      %li
        %a{href: "#"} 2
      %li
        %a{href: "#"} 3
      %li
        %a{href: "#"} 4
      %li
        %a{href: "#"} Next
