.tabbable
  = partial 'layouts/admin/tabs', :locals => {el_id: 'tab_categories'}

  .tab-content
    .tab-pane.active
      .span8
        .page-header
          %h1 Categories

        .admin-categories.well
          %ul
            %li
              %a.btn.btn-mini{href: '#'}
                %i.icon-pencil
              %a.btn.btn-mini{href: '#'}
                %i.icon-remove
              Home page
              %span.muted (50 Items)
              %ul
                - 4.times.each do
                  %li
                    %a.btn.btn-mini{href: '#'}
                      %i.icon-pencil
                    %a.btn.btn-mini{href: '#'}
                      %i.icon-remove

                    = lorem.name
                    %span.muted (5 Items)
            %li
              %a.btn.btn-mini{href: '#'}
                %i.icon-pencil
              Available Products
              %span.muted (300 Items)


              %ul
                - 4.times.each do
                  %li
                    %a.btn.btn-mini{href: '#'}
                      %i.icon-pencil
                    %a.btn.btn-mini{href: '#'}
                      %i.icon-remove

                    = lorem.name
                    %span.muted (19 Items)


      .span4.well
        .page-header
          %h3 Create Category

        %form
          %fieldset
            .control-group
              %label.control-label Parent Category
              .controls
                %select
                  %option None
            .control-group
              %label.control-label Name
              .controls
                %input{type: 'text'}
            .control-group
              %label.control-label Valid Period
              .controls
                %input.input-small{type: 'date', placeholder: 'Start Date'}
                %input.input-small{type: 'date', placeholder: 'End Date'}

            .control-group
              %label.control-label Tax Rate
              .controls
                %input.input-small{type: 'text', placeholder: 'Default - 9%'}

            .form-actions
              %button.btn.btn-primary{type: 'submit'} Add Category